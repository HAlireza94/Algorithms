(
SELECT 
    CITY,
    LENGTH(CITY) AS NAMELENGTH
FROM
    `STATION`
WHERE 
    LAT_N > 0 AND LONG_W > 0
ORDER BY NAMELENGTH ASC, CITY ASC
LIMIT 1
)

UNION ALL

(
SELECT 
    CITY,
    LENGTH(CITY) AS NAMELENGTH1
FROM 
    `STATION`
WHERE 
    LAT_N > 0 AND LONG_W > 0
ORDER BY NAMELENGTH1 DESC, CITY ASC
LIMIT 1
    );
    
